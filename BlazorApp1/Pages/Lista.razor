<h4><Font color="580671">Lista criada</Font></h4>
<div> 
    <ul>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th> Nome Bandas </th>
                </tr>
            </thead>
            <tbody>
                 
                    <ul>
                        @foreach(var banda in ListaBandas){
                            <li> @banda.Nome </li>
                        }
                    </ul>
                
            </tbody>
        </table>
    </ul>
</div>



@code{
    public class Banda{
        public string Nome { get; set; }
    }

    List<Banda> ListaBandas = new List<Banda>();

    protected override void OnInitialized() {
        Banda ta = new Banda();
        ta.Nome = "One Direction";
        ListaBandas.Add(ta);

        Banda tb = new Banda();
        tb.Nome = "Simple Plan";
        ListaBandas.Add(tb);

        foreach (var banda in ListaBandas) {
            var nome = banda.Nome;
        }
    }
}

